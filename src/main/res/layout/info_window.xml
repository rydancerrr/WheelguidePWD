<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"

>

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        app:cardBackgroundColor="#ACACAC"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        app:cardUseCompatPadding="true"
        >

    <ImageView
        android:id="@+id/imageShow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_photo_black_24dp"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp">

        <TextView
            android:id="@+id/titlei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:hint="Title"/>

        <TextView
            android:id="@+id/detail"
            android:layout_below="@+id/titlei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:hint="Address"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail"
            android:padding="2dp"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/acc_park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_local_parking_black_24dp"/>

        <ImageView
            android:id="@+id/acc_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/acc_park"
            android:src="@drawable/ic_wc_black_24dp"/>

        <ImageView
            android:id="@+id/acc_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/acc_room"
            android:src="@drawable/ic_sign_tool_black_24dp"/>
        <ImageView
            android:id="@+id/acc_wide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/acc_sign"
            android:src="@drawable/ic_elevator_circle_black_24dp"/>
        <ImageView
            android:id="@+id/acc_wheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/acc_wide"
            android:src="@drawable/ic_accessible_black_24dp"/>
        </RelativeLayout>






    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>