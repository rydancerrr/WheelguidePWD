<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/categ4"
    tools:context=".Activities.PostCategory">



    <RelativeLayout
        android:id="@+id/navs"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/navs_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="List"
            android:backgroundTint="@android:color/white"
            android:background="@drawable/roundedcorner2"/>

        <Button
            android:id="@+id/n"
            android:layout_width="40dp"
            android:background="#00FFFFFF"
            android:layout_toRightOf="@id/navs_1"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/navs_2"

            android:layout_width="100dp"
            android:background="@drawable/roundedcorner2"
            android:layout_toEndOf="@id/n"
            android:backgroundTint="@android:color/white"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Maps"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navs"
        android:layout_above="@id/bottom_navigation">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     />


    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/nav"
        android:id="@+id/bottom_navigation"/>
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        />

</RelativeLayout>